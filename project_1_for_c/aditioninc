#include <iostream>
using namespace std;

int main() {
    // Declare variables
    int num1, num2, sum;

    // Ask for input
    cout << "Enter first number: ";
    cin >> num1;

    cout << "Enter second number: ";
    cin >> num2;

    // Perform addition
    sum = num1 + num2;

    // Display result
    cout << "The sum is: " << sum << endl;

    return 0;
}